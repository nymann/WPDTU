<UserControl x:Class="UMLaut.View.UserControls.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMLaut.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             MinHeight="200"
             MinWidth="200"
             >

    <StackPanel x:Name="SideBarContent" Background="Aqua" Height="Auto">
        <Grid x:Name="Tools" Background="BlueViolet" Height="50" >
            <TextBlock>
                Tools
            </TextBlock>
        </Grid>
        
        <StackPanel x:Name="Properties" Background="Bisque" Height="50" VerticalAlignment="Bottom">
            <TextBlock>
                StackPanel
            </TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
