<UserControl x:Class="UMLaut.View.Drawable.ActivityUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMLaut.View.Drawable"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Border BorderThickness="1" Height="50" Width="100" Grid.Row="0" Grid.ColumnSpan="2"
        CornerRadius="10,10,10,10" BorderBrush="Black" Background="#CDF4FF">
        <TextBlock Name="activityLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Label}"/>
    </Border>
</UserControl>
