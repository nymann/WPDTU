<UserControl x:Class="UMLaut.View.Drawable.Shape.SendSignalUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMLaut.View.Drawable"
             mc:Ignorable="d" 
             Width="{Binding Width}" Height="{Binding Height}" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid>
        <Polygon Points="0,0 80,0 100,25 80,50 0,50"
                 Stroke="Black"
                 StrokeThickness="2"
                 HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Fill">
            <Polygon.Fill>
                <SolidColorBrush Color="White"/>
            </Polygon.Fill>

        </Polygon>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Label}"/>
    </Grid>
</UserControl>
