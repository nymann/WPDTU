<UserControl x:Class="UMLaut.View.Sidebar.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMLaut.View.Sidebar"
             xmlns:toolbox="clr-namespace:UMLaut.View.Sidebar.Toolbox"
             xmlns:properties="clr-namespace:UMLaut.View.Sidebar.Properties"

             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="225" />
        </Grid.RowDefinitions>

        <toolbox:Toolbox Grid.Row="0"/>
        
        <properties:Properties Grid.Row="1" DataContext="{Binding }"/>
    </Grid>
</UserControl>
